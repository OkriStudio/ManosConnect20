<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ManosConnect20" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/button_color</item> <!-- Color primario para la app -->
        <item name="colorOnPrimary">@color/black</item> <!-- Color del texto sobre el color primario -->
        <item name="colorSecondary">@color/black</item> <!-- Color secundario -->
        <item name="colorOnSecondary">@color/white</item> <!-- Color del texto sobre el color secundario -->
        <item name="buttonStyle">@style/CustomButton</item> <!-- Estilo personalizado para botones -->
    </style>

    <style name="Theme.ManosConnect20" parent="Base.Theme.ManosConnect20" />

    <!-- Estilo personalizado para botones -->
    <style name="CustomButton" parent="Widget.Material3.Button">
        <item name="android:background">@color/button_color</item> <!-- Color de fondo del botón -->
        <item name="android:textColor">@color/black</item> <!-- Color del texto del botón -->
    </style>
</resources>
